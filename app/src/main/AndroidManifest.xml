<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.app.studio.tutor">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <activity
            android:name=".SplashActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.app.studio.tutor.RegistrationActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.app.studio.tutor.LoginActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.app.studio.tutor.ForgotPasswordActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.app.studio.tutor.MainActivity"
            android:screenOrientation="portrait" />

        <!-- Points to searchable activity -->
        <meta-data
            android:name="android.app.default_searchable"
            android:value=".MainActivity" />

        <!-- Points to searchable meta data -->
        <meta-data
            android:name="android.app.searchable"
            android:resource="@xml/searchable" />

    </application>

</manifest>
